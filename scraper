name: Run Scraper

on:
  schedule:
    - cron: '0 * * * *' # every hour

jobs:
  scrape:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: 3.10
      - run: pip install -r requirements.txt
      - run: python tools/run_scrapers.py
